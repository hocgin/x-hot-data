{
  "imports": {
    "@std/http": "jsr:@std/http@^1.0.0",
    "@std/fs": "jsr:@std/fs@^1.0.0",
    "@std/encoding": "jsr:@std/encoding@^1.0.0",
    "@std/datetime": "jsr:@std/datetime@^1.0.0",
    "@std/async": "jsr:@std/async@^1.0.0",
    "@std/path": "jsr:@std/path@^1.0.0",
    "@std/json": "jsr:@std/json@^1.0.0",
    "chalk": "npm:chalk@5",
    "dayjs": "npm:dayjs@1"
  },
  "tasks": {
    "dev": "deno run --allow-all --watch=src/ dev.ts",
    "start": "deno run --allow-net --allow-read --allow-write --allow-env main.ts",
    "test": "deno test --allow-all",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "check": "deno check **/*.ts"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": true
  },
  "compilerOptions": {
    "strict": true,
    "lib": ["deno.window"]
  }
}
